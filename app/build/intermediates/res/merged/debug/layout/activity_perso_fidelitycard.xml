<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PersoCedula_NEOActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/label_cardID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_cardID" />

        <EditText
            android:id="@+id/cardID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_cardID"/>

        <TextView
            android:id="@+id/label_clientID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_clientID" />

        <EditText
            android:id="@+id/clientID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_clientID" /> 

        <TextView
            android:id="@+id/label_balanceID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_clientBalance" />

        <EditText
            android:id="@+id/balanceID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_clientBalance" />
        
        <TextView
            android:id="@+id/label_pointsID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_clientPoints" />

        <EditText
            android:id="@+id/pointsID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_clientPoints" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_dateCreate" />

        <EditText
            android:id="@+id/creationDateID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_dateCreate" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_expirateDate" />

        <EditText
            android:id="@+id/expirationDateID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_expirateDate" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_fuelType" />

        <EditText
            android:id="@+id/fuelTypeID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_fuelType" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/home/cesar/Android/PersoTollingNeology/app/src/main/res/layout/activity_perso_fidelitycard.xml -->